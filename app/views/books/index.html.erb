
<h1>Books</h1>

<p>Title</p>
<% @books.each do |book| %>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

<% end %>




<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title %>

  <label for="book_body">Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
